root = true

# Global
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript
[*.{js,json}]
indent_style = space
indent_size = 2

# PHP
[*.{php}]
indent_style = space
indent_size = 4

# HTML
[*.html]
indent_style = space
indent_size = 2

# CSS, SCSS
[*.{css,scss,styl}]
indent_style = space
indent_size = 2
